---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import BlogPost from "../../../components/BlogPost.astro";
import { sortByDate } from "../../../components/sortbydate";
export async function getStaticPaths() {
  const allShortForm = await getCollection("posts");
  const uniqueTags = [
    ...new Set(allShortForm.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allShortForm.filter((post) =>
      post.data.tags.includes(tag),
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout title={tag} is404Page={false}>
  {posts.sort(sortByDate).map((post) => <BlogPost post={post} />)}
</BaseLayout>
