---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogPost from "../../components/BlogPostCard.astro";
import { sortByDate } from "../../components/sortbydate";
const pageTitle = "Authors";
const allAuthors = await getCollection("authors");
//TODO: This should not use "blog post" as the iterator... Or blog post should be more generic
---

<BaseLayout title={pageTitle} is404Page={false}>
  {
    allAuthors
      .sort(sortByDate)
      .map((author) => (
        <BlogPost post={author} url={`/authors/${author.slug}`} />
      ))
  }
</BaseLayout>
