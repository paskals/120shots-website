---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts"); //TODO: Rename to "posts" in the future
// const allPosts = await Astro.glob('../../content/*/*.md');
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {
      tags.map((tag) => (
        <p class="flex flex-row mx-1 bg-slate-600  bg-opacity-50 px-2 py-1 rounded">
          <a class="text-[rgb(245,245,245)] no-underline" href={`/tags/${tag}`}>
            {tag}
          </a>
        </p>
      ))
    }
  </div>
</BaseLayout>
<style>
