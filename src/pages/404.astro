---
import BaseLayout from "../layouts/BaseLayout.astro";
import Prose from "../components/Prose.astro";
const pageTitle = "Page not found...";
---

<BaseLayout title="Not Found" is404Page={false}>
  <Prose>
    <h1 class="font-overpass-mono text-4xl">
      {pageTitle}
    </h1>

    <div>
      <a
        href="/"
        class="bg-slate-500 hover:bg-slate-400 text-white font-bold py-2 px-4 border-b-4 border-slate-700 hover:border-slate-500 rounded inline-block no-underline"
        data-astro-reload
      >
        Go Home
      </a>
    </div>
  </Prose>
</BaseLayout>
