---
import { getCollection, getEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import EssayCard from "../../components/EssayCard.astro";
import TagComponent from "../../components/TagPill.astro";
import ProseHeadings from "../../components/ProseHeadings.astro";

export async function getStaticPaths() {
  const allEssays = await getCollection("photoessays");
  const allFilms = await getCollection("films");

  const result: {}[] = [];

  for (const film of allFilms) {
    const filteredEssays = allEssays.filter((essay) => {
      if (essay.data.filmStocks === undefined) {
        return false;
      } else {
        return essay.data.filmStocks
          .map((filmStock) => filmStock.id)
          .includes(film.id);
      }
    });
    result.push({
      params: { film: film.id },
      props: { essays: filteredEssays, film },
    });
  }

  return result;
}

const filmId = Astro.params.film;
const { essays, film } = Astro.props;
---

<BaseLayout title={`${film.data.brand} ${film.data.name}`}>
  <div
    class="flex
    flex-col
    px-4
    xs:px-4
    sm:px-8
    max-w-7xl
    justify-start
    mx-auto
    w-full"
  >
    <ProseHeadings>
      <p class="md:space-x-14 md:mb-20 mb-10 text-4xl font-bold capitalize">
        Essays with <TagComponent tag={film.data.name} class:list="text-base" />
      </p>
    </ProseHeadings>
    <ul>
      {
        essays.map((essay) => (
          <EssayCard essay={essay} url={`/essays/${essay.id}`} />
        ))
      }
    </ul>
  </div>
</BaseLayout>
