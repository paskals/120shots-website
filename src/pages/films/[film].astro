---
import { getCollection, getEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogPost from "../../components/BlogPost.astro";
import TagComponent from "../../components/Tag.astro";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts");
  const allFilms = await getCollection("films");

  const result: {}[] = [];

  for (const film of allFilms) {
    const filteredPosts = allPosts.filter((post) => {
      if (post.data.filmStocks === undefined) {
        return false;
      } else {
        return post.data.filmStocks
          .map((filmStock) => filmStock.id)
          .includes(film.id);
      }
    });
    result.push({
      params: { film: film.id },
      props: { posts: filteredPosts, film },
    });
  }

  return result;
}

const filmId = Astro.params.film;
const { posts, film } = Astro.props;
---

<BaseLayout pageTitle={film}>
  <p class="md:space-x-14 md:mb-20 mb-10 text-xl">
    Posts with <TagComponent tag={film.data.name} classNames="text-base" /> film
    stock
  </p>
  <ul>
    {posts.map((post) => <BlogPost post={post} url={`/posts/${post.slug}`} />)}
  </ul>
</BaseLayout>
