---
import Image from "astro/components/Image.astro";
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { getImage } from "astro:assets";
const { is404Page = false } = Astro.props; // Get the prop from Astro.props

const favicon_avif = {
  src: "/120Shots_icon_nobackground.png",
  alt: "favicon",
  // inferSize: true,
  width: "512",
  height: "512",
};
---

<header
  class="mb-[30px] dark:bg-[rgb(34,33,37)] bg-[#f2f2f2] h-16 w-screen px-4 flex justify-center"
>
  <nav
    class="flex items-center justify-between w-full h-full relative align-center max-w-7xl"
  >
    {
      !is404Page && (
        <div class="w-auto h-auto">
          <a href="/" class=" min-w-fit min-h-fit">
            <Image
              class="favicon absolute left-0 dark:invert -mt-[25px]"
              src={favicon_avif.src}
              alt="Home"
              width={50}
              height={50}
              loading={"eager"}
            />
          </a>
        </div>
      )
    }
    {
      !is404Page && (
        <div class="absolute right-[55px] -mb-[5px]">
          <ThemeIcon />
        </div>
      )
    }
    {
      !is404Page && (
        <div class="-mt-[3px]">
          <Hamburger />
        </div>
      )
    }
    {
      !is404Page && (
        <div class="absolute right-0">
          <Navigation />
        </div>
      )
    }
  </nav>
  <slot />
</header>
