---
import Image from "astro/components/Image.astro";
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { getImage } from "astro:assets";
const { is404Page = false } = Astro.props; // Get the prop from Astro.props

const favicon_avif = {
  src: "/120Shots_icon_nobackground.png",
  alt: "favicon",
  // inferSize: true,
  width: "512",
  height: "512",
};
---

<header class="mb-[30px]">
  <nav
    class="flex items-center justify-between w-full h-full relative align-center"
  >
    {
      !is404Page && (
        <div>
          <a href="/">
            <Image
              class="favicon absolute left-0 dark:invert -mt-[22px]"
              src={favicon_avif.src}
              alt="Home"
              width={50}
              height={50}
              loading={"eager"}
            />
          </a>
        </div>
      )
    }
    {
      !is404Page && (
        <div class="absolute right-[55px] -mb-[5px]">
          <ThemeIcon />
        </div>
      )
    }
    {
      !is404Page && (
        <div class="-mt-[3px]">
          <Hamburger />
        </div>
      )
    }
    {
      !is404Page && (
        <div class="absolute right-0">
          <Navigation />
        </div>
      )
    }
  </nav>
  <slot />
</header>
